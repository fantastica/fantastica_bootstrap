gem 'activeadmin', github: 'activeadmin'
gem 'sass-rails',     '~> 4.0.0'

gem 'devise'

gem 'uglifier',       '>= 1.3.0'
gem 'font_assets'
gem 'font-awesome-rails'
gem 'modernizr-rails'
gem 'selectivizr-rails'
